<Page x:Class="FootballManager.WpfUI.Pages.SeasonCreate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FootballManager.WpfUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" 
      Title="SeasonCreate">
        <StackPanel VerticalAlignment="Center" Width="300">
            <DockPanel>
                <TextBlock Text="Season Start Date:"/>
                <DatePicker IsTodayHighlighted="True"  x:Name="dp" Margin="5,0,0,0" SelectedDateFormat="Long" />
            </DockPanel>
            <Button Margin="0 15" Content="Submit" Background="SkyBlue" Click="Create_Season_Click"/>
        </StackPanel>
</Page>
