@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

    <div class="col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Sign In</div>
            </div>
            <div style="padding-top:30px" class="panel-body">
                @if (TempData["LoginErrorMasage"] != null)
                {
                    <div  id="login-alert" class="alert alert-danger col-sm-12">@TempData["LoginErrorMasage"]</div>
                }

                <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="Brugernavn">
                        <span asp-validation-for="Email"></span>

                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input asp-for="Password" class="form-control" placeholder="Adgangskode">
                        <span asp-validation-for="Password"></span>
                    </div>

                    <div class="input-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="RememberMe"> Husk mig
                            </label>
                        </div>
                    </div>

                    <div style="margin-top:10px" class="form-group">
                        <div class="col-sm-12 controls">
                            <input type="submit" class="btn btn-success" value="Login">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                Don't have an account!
                                <a asp-controller="Account" asp-action="Register">
                                    Opret ny bruger
                                </a>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>


