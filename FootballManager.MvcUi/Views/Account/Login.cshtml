@model LoginViewModel
@{
    ViewData["Title"] = "Login";
      Layout = "~/Views/Shared/LoginRegisterLayout.cshtml";
}




<div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative"
     style="background:url(../assets/images/big/auth-bg.jpg) no-repeat center center;">
    <div class="auth-box row">
        <div class="col-lg-7 col-md-5 modal-bg-img" style="background-image: url(../assets/images/big/3.jpg);">
        </div>
        <div class="col-lg-5 col-md-7 bg-white">
            <div class="p-3">
                <div class="text-center">
                    <img src="../assets/images/big/icon.png" alt="wrapkit">
                </div>
                <h2 class="mt-3 text-center">Sign In</h2>
                <p class="text-center">Enter your email address and password to access admin panel.</p>
                @if (TempData["LoginErrorMasage"] != null)
                {
                    <div id="login-alert" class="alert alert-danger col-sm-12">@TempData["LoginErrorMasage"]</div>
                }
                <form asp-controller="Account" asp-action="Login" method="post" class="mt-4" role="form">
                    <div class="row">
                        <div class="col-lg-12">
                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="Brugernavn">
                                <span asp-validation-for="Email"></span>

                            </div>

 
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">

                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input asp-for="Password" class="form-control" placeholder="Adgangskode">
                                <span asp-validation-for="Password"></span>
                                 
                            </div>
                        </div>
                        <div class="col-lg-12 text-center">
                            <input type="submit"  class="btn btn-block btn-dark"value="Login">
                             
                        </div>
                        <div class="col-lg-12 text-center mt-5">
                            Don't have an account!
                            <a asp-controller="Account" asp-action="Register">
                                Opret ny bruger
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

 